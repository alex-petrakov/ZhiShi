<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:transitionGroup="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <me.alex.pet.apps.zhishi.presentation.common.ColoredUnderlineTextView
            android:id="@+id/rule_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:minHeight="48dp"
            android:textAppearance="?textAppearanceBody1"
            tools:text="После ж, ч, ш, щ не пишутся ю, я, ы, а пишутся у, а, и, например: чудо, щука, час, роща, жир, шить." />

        <TextView
            android:id="@+id/section_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_clickable_surface"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp"
            android:textAppearance="?textAppearanceSubtitle1"
            android:textColor="?colorPrimary"
            android:visibility="gone"
            app:drawableEndCompat="@drawable/ic_details_chevron"
            tools:text="§§ 1–6 Гласные после шипящих и ц"
            tools:visibility="visible" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>