<resources>
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Material theme attributes -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <item name="chipStyle">@style/Widget.ZhiShi.Chip.Action</item>

        <!-- Custom attributes -->
        <item name="colorTextEmphasis">@color/colorTextEmphasis</item>
        <item name="colorMisspelledTextUnderline">@color/colorMisspelledTextUnderline</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="android:statusBarColor">@color/colorSurfaceVariant</item>
    </style>

    <style name="BaseAppTheme.Overlay.PrimaryOnSurface" parent="BaseAppTheme">
        <item name="colorOnSurface">?colorPrimary</item>
    </style>


    <style name="Widget.ZhiShi.Chip.Action" parent="Widget.MaterialComponents.Chip.Action">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.ZhiShi.SmallComponent</item>
    </style>

    <style name="ShapeAppearance.ZhiShi.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>