<resources>
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Material theme attributes -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <item name="textAppearanceHeadline1">@style/TextAppearance.ZhiShi.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.ZhiShi.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.ZhiShi.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.ZhiShi.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.ZhiShi.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.ZhiShi.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.ZhiShi.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.ZhiShi.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.ZhiShi.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.ZhiShi.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.ZhiShi.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.ZhiShi.Overline</item>
        <item name="textAppearanceButton">@style/TextAppearance.ZhiShi.Button</item>

        <item name="chipStyle">@style/Widget.ZhiShi.Chip.Action</item>

        <item name="editTextStyle">@style/Base.Widget.MaterialComponents.TextInputEditText</item>

        <!-- Custom attributes -->
        <item name="colorTextEmphasis">@color/colorTextEmphasis</item>
        <item name="colorMisspelledTextUnderline">@color/colorMisspelledTextUnderline</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="android:statusBarColor">@color/colorSurfaceVariant</item>
    </style>

    <style name="BaseAppTheme.Overlay.PrimaryOnSurface" parent="BaseAppTheme">
        <item name="colorOnSurface">?colorPrimary</item>
    </style>


    <style name="TextAppearance.ZhiShi.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/family_fira_sans_regular</item>
    </style>

    <style name="TextAppearance.ZhiShi.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/family_fira_sans_regular</item>
    </style>

    <style name="TextAppearance.ZhiShi.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/family_fira_sans_regular</item>
    </style>

    <style name="TextAppearance.ZhiShi.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/family_fira_sans_regular</item>
    </style>

    <style name="TextAppearance.ZhiShi.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/family_fira_sans_regular</item>
    </style>

    <style name="TextAppearance.ZhiShi.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/family_fira_sans_medium</item>
    </style>

    <style name="TextAppearance.ZhiShi.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/family_fira_sans_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.ZhiShi.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/family_fira_sans_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.ZhiShi.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/family_fira_sans_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.ZhiShi.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/family_fira_sans_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.ZhiShi.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/family_fira_sans_regular</item>
    </style>

    <style name="TextAppearance.ZhiShi.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/family_fira_sans_medium</item>
    </style>

    <style name="TextAppearance.ZhiShi.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/family_fira_sans_medium</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="Widget.ZhiShi.Chip.Action" parent="Widget.MaterialComponents.Chip.Action">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.ZhiShi.SmallComponent</item>
    </style>

    <style name="ShapeAppearance.ZhiShi.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>