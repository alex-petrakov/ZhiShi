CREATE TABLE chapter(
    id INTEGER PRIMARY KEY,
    part_id INTEGER NOT NULL,
    name TEXT NOT NULL,
    FOREIGN KEY (part_id) REFERENCES part(id) ON DELETE CASCADE ON UPDATE CASCADE
);


